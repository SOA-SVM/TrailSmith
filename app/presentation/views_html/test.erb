<style>
    .plan_name{
        font-size: 32px;
        font-weight: 700;
    }
    .travel_mode{
        font-size: 14px;
    }
    .highlight-arrow {
        background-color: #ffcccc; /* 高亮背景色 */
        border: 2px solid #ff0000; /* 紅色邊框 */
        border-radius: 5px;
    }
</style>
<div class="d-flex align-items-end">
    <span class='plan_name mx-2'> A Trip to <%= hashtag[:region] %> </span>
    <span class='badge bg-info me-2'>People: <%= hashtag[:people] %></span>
    <span class='badge bg-info'>Day: <%= hashtag[:day] %></span>
</div>
<br>
<div class="d-flex col-12">
    <div class="left col-4">
        <h2>Travel Plan: </h2>
        <br>
        <% plan.spots.each_with_index do |spot, index| %>
            <div class="route-step" title="<%= spot.address %>">
                <div class="step-text">
                    <span class="step-index"><%= index + 1 %>.</span>
                    <span class="spot-name"><%= spot.name %></span>
                </div>
                <% if index < plan.spots.size - 1 %>
                <div class="route-arrow d-flex align-items-center" data-index=<%= index %>>
                    <i class="fas fa-arrow-down me-2"></i> 
                    <span class="travel_mode">travel mode: <%= plan.travelling[index].travel_mode %></span>
                </div>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="right col-8">
        <div id="map" style="width: 100%; height: 500px;">
        </div>
    </div>
</div>

<script>
    window.onload = () => {
        initMap();
    }
    function initMap() {
        const locations = <%= locations %>
        const polylines = <%= polylines %>

        const map = new google.maps.Map(document.getElementById("map"), {
        //   center: locations[0]['position'],
          zoom: 14,
        });

        const bounds = new google.maps.LatLngBounds();

        const markers = [];
        const routes = [];
        let activeIndex = null;

        locations.forEach((location, index) => {
            const position = location['coordinate'];
            const marker = new google.maps.Marker({
                position: position,
                map,
                title: location['title'],
                label: {
                    text: String.fromCharCode(65 + index), // convert index to alphabet
                    color: "#FFFFFF",
                    fontWeight: "bold",
                    fontSize: "14px",
                },
            });

            markers.push(marker);
            bounds.extend(position);
        });

        map.fitBounds(bounds);

        polylines.forEach((encodedPolyline, index) => {
            const polylinePath = decodePolyline(encodedPolyline);
            const routePolyline = new google.maps.Polyline({
                path: polylinePath,
                geodesic: true,
                strokeColor: "#FF0000",
                strokeOpacity: 0.5,
                strokeWeight: 2,
            });
            routePolyline.setMap(map);
            routes.push(routePolyline);
        });

        $(".route-arrow").hover(
            function () {
                const index = $(this).data("index");
                // 如果不是當前點擊高亮的路線，則臨時高亮
                if (index !== activeIndex) {
                    routes[index].setOptions({
                        strokeOpacity: 1.0,
                        strokeWeight: 4,
                    });
                }
            },
            function () {
                const index = $(this).data("index");
                // 如果不是當前點擊高亮的路線，則恢復預設樣式
                if (index !== activeIndex) {
                    routes[index].setOptions({
                        strokeOpacity: 0.5,
                        strokeWeight: 2,
                    });
                }
            }
        );

        // 監聽箭頭點擊事件
        $(".route-arrow").on("click", function (event) {
            event.stopPropagation(); // 阻止點擊事件冒泡到 document

            const index = $(this).data("index");

            // 如果點擊的是當前高亮的箭頭，則取消高亮
            if (activeIndex === index) {
                resetHighlight();
                return;
            }

            // 重置之前的高亮狀態
            resetHighlight();

            // 高亮當前的箭頭和路線
            $(this).addClass("highlight-arrow");
            routes[index].setOptions({
                strokeOpacity: 1.0,
                strokeWeight: 4,
            });

            activeIndex = index; // 更新高亮的索引
        });

        // 點擊空白處恢復狀態
        $(document).on("click", function () {
            resetHighlight();
        });

        // 重置高亮的函數
        function resetHighlight() {
            if (activeIndex !== null) {
                $(".route-arrow").removeClass("highlight-arrow");
                routes[activeIndex].setOptions({
                    strokeOpacity: 0.5,
                    strokeWeight: 2,
                });
                activeIndex = null; // 重置高亮狀態
            }
        }
        

    }

    // 解碼函數
    function decodePolyline(encoded) {
        let points = [];
        let index = 0, len = encoded.length;
        let lat = 0, lng = 0;

        while (index < len) {
          let b, shift = 0, result = 0;
          do {
            b = encoded.charCodeAt(index++) - 63;
            result |= (b & 0x1f) << shift;
            shift += 5;
          } while (b >= 0x20);
          let dlat = (result & 1) ? ~(result >> 1) : (result >> 1);
          lat += dlat;

          shift = 0;
          result = 0;
          do {
            b = encoded.charCodeAt(index++) - 63;
            result |= (b & 0x1f) << shift;
            shift += 5;
          } while (b >= 0x20);
          let dlng = (result & 1) ? ~(result >> 1) : (result >> 1);
          lng += dlng;

          points.push({ lat: lat / 1e5, lng: lng / 1e5 });
        }

        return points;
    }
</script>

